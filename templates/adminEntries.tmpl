<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{% .title %}}</title>
		{{% template "includes"%}}
		<script src="/assets/js/angular.min.js"></script>
    <script src="/assets/js/angular-file-upload.min.js"></script>
    <script src="/assets/js/angular-file-upload-shim.min.js"></script>
    <script src="/assets/js/editEntry.js"></script>
	</head>
	<body ng-app="entry" ng-controller="entryController">
		<header>
			<h1>{{% .title %}}</h1>
		</header>
		<nav class="container-fluid">
			<a href="/">Home</a>
			<a href="/admin">ADMIN</a>
		</nav>
		<main class="container-fluid">
			<div class="row">
				{{%range .entry%}}
					<div class="col-sm-2 col-sm-offset-6"><a href="/admin/entry/{{% .Slug %}}/new">NEW COMMIT</a></div>
					<div class="col-sm-2"><a href="/{{% .Slug %}}/all">VIEW ALL</a></div>
				{{%end%}}
			</div>
			{{% range .commits %}}
				<div class="row">
					<div class="col-sm-6 text-right">{{% .Title %}}</div>
					<div class="col-sm-2"><a href="/{{%.Slug%}}/{{%.CommitID%}}">VIEW</a></div>
					<div class="col-sm-1"><a href="/admin/commit/{{% .Slug %}}/edit">EDIT</a></div>
					<div class="col-sm-1"><a href="#">DELETE</a></div>
				</div>
			{{% end %}}

			<div class="alert alert-info" ng-show="dispError">
        {{dispError}}
        <button type="button" class="close" ng-click="clearDispError()"><span aria-hidden="true">&times;</span></button>
      </div>
      <h1>{{% .name %}}</h1>
      <form ng-submit="submitEntry()">
        <div class="form-group">
					<label for="Category">Category</label>
					<input type="text" class="form-control" id="Category" placeholder="Category" ng-model="entry.Category">
				</div>
				<div class="form-group" ng-hide="deleteConfirm">
					<button type="button" class="btn btn-warning" ng-click="deleteConfirm = true">DELETE?</button>
				</div>
				<div class="form-group" ng-show="deleteConfirm">
					<button type="button" class="btn btn-danger" ng-click="deleteIndex()">DELETE!!</button>
				</div>
        <div class="checkbox">
          <label>
            <input type="checkbox" checked ng-model="entry.Active"> Activate
          </label>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

		</main>

		<footer>{{% template "footer" %}}</footer>
	</body>
</html>