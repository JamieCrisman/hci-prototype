<!DOCTYPE html>
<html lang="en">
	<head>
		<title>{{% .title %}}</title>
		{{% template "includes"%}}
	</head>
	<body class="fullbleed" unresolved>
		<main class="vertical">
			<paper-header-panel mode="waterfall">
	  		
	  		<div class="paper-header">
	  			<nav>
	  				<ul>
	  					<li>
								<a href="/">Longest Voyage</a>
							</li>
						</ul>
					</nav>
	  		</div>

	  		<div class="content fit">
					<template is="dom-bind" id="app">
						<neon-animated-pages attr-for-selected="data-route" selected="{{route}}" entry-animation="fade-in-animation" exit-animation="fade-out-animation">
							
							<neon-animatable data-route="home">
								<div class="container-fluid">
									<div class="row">
										<div class="col-md-6 col-md-offset-3 entry-content">
											{{% .content %}}
											{{% range .entries %}}
												<div>
													<a data-route="entry" href="/{{% .Slug %}}">{{% .Name %}}</a>
												</div>
											{{% end %}}
										</div>
									</div>
								</div>
							</neon-animatable>
							
							<neon-animatable data-route="entry">
								<div class="container-fluid">
									<div class="row">
										<div class="col-md-2">
											<h1 class="entry-header"><span>{{entryName}}</span></h1>
										</div>
										<div class="col-md-6 col-md-offset-1 entry-content">
											<template is="dom-repeat" items="{{entries}}">
												<div class="mdl-card mdl-shadow--4dp">
													<div>
														<h1 class="col-md-10">
															<span inner-h-t-m-l="{{item.Title}}"></span>
														</h1>
														<a class="col-md-2 text-right commitId" href="{{commitURL(item.Slug, item.CommitID)}}"><span>{{item.CommitID}}</span></a>
													</div>
													<div class="col-md-12" inner-h-t-m-l="{{item.CompiledContent}}"></div>
													<small class="col-md-12">
														posted <time is="relative-time" datetime$="{{item.CreateDate}}">April 1, 2014</time>
													</small>
												</div>
											</template>
										</div>
									</div>
								</div>
							</neon-animatable>
							
							<neon-animatable data-route="loading">
								<div class="container">
									<div id="loading-page" class="mdl-progress mdl-js-progress mdl-progress__indeterminate progress-demo"></div>
								</div>
							</neon-animatable>

						</neon-animated-pages>
					</template>
	  		</div>
			</paper-header-panel>
		</main>
		<script src="assets/js/app.js"></script>
	</body>
</html>