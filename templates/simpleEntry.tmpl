<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{% .title %}}</title>
		<link rel="stylesheet" type="text/css" href="/assets/css/shizuku.css">
		<link rel="stylesheet" type="text/css" href="/assets/css/animate.css">
		<link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
		<link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />
	</head>
	<body>
		<header>
			<h1>{{% .title %}}</h1>
		</header>
		<nav>
			<a href="/">Home</a>
		</nav>
		<main>
			{{% range .commits %}}
				<section>
					<h2>
						{{% .Title %}}
					</h2>
					<div>
						{{% .CompiledContent %}}
					</div>
					<div>
						{{% .LastUpdated %}}
						<a href="/{{%.Slug%}}/{{% .CommitID %}}">{{% .CommitID %}}</a>
					</div>
				</section>
			{{% end %}}
		</main>
		<footer>{{% template "footer" %}}</footer>
	</body>
</html>